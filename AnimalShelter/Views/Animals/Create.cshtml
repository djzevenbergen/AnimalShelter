@{
  Layout = "_Layout";
}
@using AnimalShelter.Models;
@model AnimalShelter.Models.Animal
<h4>Add a new animal</h4>
@using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.DropDownListFor(model => model.AnimalType, new SelectList(Enum.GetValues(typeof(AType))), "Select Animal Type", new { @class = "form-control" , required="required"})
        @Html.LabelFor(model => model.Breed)
    @Html.TextBoxFor(model => model.Breed)
        @Html.LabelFor(model => model.Gender)
    @Html.TextBoxFor(model => model.Gender)

    @Html.TextBoxFor(model => model.DateAdmitted, "{0:yyyy-MM-dd}", new { type="date" })

      <input type="submit" value="Add animal"/>


  }